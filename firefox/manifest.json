


  {
    "manifest_version": 3,
    "name": "Animeplanet Additions",
    "version": "1.0.5",
    "description": "Extension to add features and fixing inconveniences i have had with animeplanet.",
    "permissions": [
      "tabs",
      "scripting",
      "webNavigation"
    ],
    "background": {
      "scripts": ["background.js"]
    },

    "host_permissions": [
      "https://www.anime-planet.com/*",
      "https://api.mangaupdates.com/v1/series/*"

    ],

    "action": {
      "default_popup": "popup/popup.html"
    },


    "options_ui": {
      "page": "options/options.html",
      "open_in_tab": true
    },

    "icons": {
      "128": "icon.svg"
    },

    "browser_specific_settings": {
      "gecko": {
        "id": "animeplanet-additions@sandelier.com",
        "strict_min_version": "126.0"
      },
      "gecko_android": {
        "strict_min_version": "131.0.3"
      }
    }
}
  