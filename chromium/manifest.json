


{
  "manifest_version": 3,
  "name": "Animeplanet Additions",
  "version": "1.0",
  "description": "Extension to add features and fixing inconveniences I have had with Animeplanet.",
  "permissions": [
    "tabs",
    "scripting",
    "webNavigation",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.anime-planet.com/*"
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "icons": {
    "128": "icon.svg"
  }
}
